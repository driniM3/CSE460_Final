@model IEnumerable<ProjectManagement.Models.Tenant>

@{
    ViewBag.Title = "Index";
}
<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <hgroup class="title">
            <h1></h1>
        </hgroup>
    </div>
</div>
<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <div class="well">
            <h3 class="heading">Welcome to the Project Management SAAS
            </h3>
            <p>Below are the current tenants that we have</p>
            <hr class="black" />
            <div class="row">
                    <div class="col-md-8">
                        <b>Name</b>
                    </div>
                    <div class="col-md-4">
                        <b>Action</b>
                    </div>
                </div>
            @if (Model.Count() == 0)
            {
                <div class="row">
                    <div class="col-md-12">
                        No Tenants Currently Exist.. @Html.ActionLink("Create New One", "Register", "Account", new {tenant = "New"}, null)
                    </div>
                    
                </div>
            }
            @foreach (var tenant in Model)
            {
                <div class="row">
                    <div class="col-md-8">
                        @tenant.Name
                    </div>
                    <div class="col-md-4">
                        @Html.ActionLink("Register", "Register", "Account", new {tenant = tenant.Name}, null)
                        |
                        @Html.ActionLink("Log In", "LogIn", "Account", new {tenant = tenant.Name}, null)
                    </div>
                </div>
            }
        </div>
    </div>
</div>
